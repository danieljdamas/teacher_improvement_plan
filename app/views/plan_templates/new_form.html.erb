<h1>
  Add a new plan
</h1>


<hr>

<!-- Form plan start -->
<form action="/create_plan" method="post">
<!-- Form plan end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for status start -->
  <div class="form-group">
    <label for="status">
      Status
    </label>

    <!-- Input for status start -->
    <input type="text" id="status" name="status" class="form-control">
    <!-- Input for status end -->
  </div>
  <!-- Label and input for status end -->

  <!-- Label and input for owner_id start -->
  <!-- Input for "owner_id" start -->
  <input type="hidden" name="owner_id" value="<%= current_user.id %>">
  <!-- Input for "owner_id" end -->
  <!-- Label and input for owner_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create plan
  </button>
</form>

<hr>

<a href="/plans">
  Go back
</a>
