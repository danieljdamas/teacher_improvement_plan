<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All plans
    </h1>

    <a href="/plans/new" class="btn btn-block btn-outline-secondary">
      Add a new plan
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "plan_templates/plans_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Status
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @plans.each do |plan| %>
      <tr>
        <!-- Display plan.id start -->
        <td>
          <%= plan.id %>
        </td>
        <!-- Display plan.id end -->

        <!-- Display plan.description start -->
        <td>
          <%= plan.description %>
        </td>
        <!-- Display plan.description end -->

        <!-- Display plan.status start -->
        <td>
          <%= plan.status %>
        </td>
        <!-- Display plan.status end -->

        <!-- Display plan.owner_id start -->
        <td>
          <% if plan.owner.present? %>
            <a href="/users/<%= plan.owner.id %>">
              <%= plan.owner.email %>
            </a>
          <% end %>
        </td>
        <!-- Display plan.owner_id end -->

        <!-- Display plan.created_at start -->
        <td>
          <%= time_ago_in_words(plan.created_at) %> ago
        </td>
        <!-- Display plan.created_at end -->

        <!-- Display plan.updated_at start -->
        <td>
          <%= time_ago_in_words(plan.updated_at) %> ago
        </td>
        <!-- Display plan.updated_at end -->

        <td>
          <a href="/plans/<%= plan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @plans, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
