<% if @plan.present? %>
  <% if @plan.errors.any? %>
    <% @plan.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new plan
</h1>


<hr>

<form action="/create_plan" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @plan.description %></textarea>
  </div>

  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control" value="<%= @plan.status %>">
  </div>

  <input type="hidden" name="owner_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create plan
  </button>
</form>

<hr>

<a href="/plans">
  Go back
</a>
