<form action="/create_plan_comment_from_plan" method="post">

  <div class="form-group">
    <label for="comment">
      Comment
    </label>

    <textarea id="comment" name="comment" class="form-control" rows="3"><%= @plan_comment.comment %></textarea>
  </div>

  <div class="form-group">
    <label for="author_id">
      Author
    </label>

    <%= select_tag(:author_id, options_from_collection_for_select(User.all, :id, :email, @plan_comment.author_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="plan_id" value="<%= @plan.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create plan comment
  </button>
</form>
