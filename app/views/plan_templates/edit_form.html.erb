<h1>
  Edit plan #<%= @plan.id %>
</h1>

<hr>

<form action="/update_plan/<%= @plan.id %>" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @plan.description %></textarea>
  </div>

  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control" value="<%= @plan.status %>">
  </div>


  <button class="btn btn-block btn-outline-secondary">
    Update plan
  </button>
</form>

<hr>

<a href="/plans">
  Go back
</a>
