<h1>
  Add a new goal
</h1>


<hr>

<form action="/create_goal" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="plan_id">
      Plan
    </label>

    <%= select_tag(:plan_id, options_from_collection_for_select(Plan.all, :id, :description, @goal.plan_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create goal
  </button>
</form>

<hr>

<a href="/goals">
  Go back
</a>
