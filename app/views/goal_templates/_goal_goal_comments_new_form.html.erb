<form action="/create_goal_comment_from_goal" method="post">

  <div class="form-group">
    <label for="comment">
      Comment
    </label>

    <textarea id="comment" name="comment" class="form-control" rows="3"><%= @goal_comment.comment %></textarea>
  </div>

  <div class="form-group">
    <label for="author_id">
      Author
    </label>

    <%= select_tag(:author_id, options_from_collection_for_select(User.all, :id, :email, @goal_comment.author_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="goal_id" value="<%= @goal.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create goal comment
  </button>
</form>
