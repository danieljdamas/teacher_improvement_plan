<% if @plan_comment.present? %>
  <% if @plan_comment.errors.any? %>
    <% @plan_comment.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new plan comment
</h1>


<hr>

<form action="/create_plan_comment" method="post">

  <div class="form-group">
    <label for="comment">
      Comment
    </label>

    <textarea id="comment" name="comment" class="form-control" rows="3"><%= @plan_comment.comment %></textarea>
  </div>

  <div class="form-group">
    <label for="author_id">
      Author
    </label>

    <%= select_tag(:author_id, options_from_collection_for_select(User.all, :id, :email, @plan_comment.author_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="plan_id">
      Plan
    </label>

    <%= select_tag(:plan_id, options_from_collection_for_select(Plan.all, :id, :description, @plan_comment.plan_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create plan comment
  </button>
</form>

<hr>

<a href="/plan_comments">
  Go back
</a>
