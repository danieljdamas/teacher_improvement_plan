<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All plan comments
    </h1>

    <a href="/plan_comments/new" class="btn btn-block btn-outline-secondary">
      Add a new plan comment
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "plan_comment_templates/plan_comments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Comment
        </th>

        <th>
          Author
        </th>

        <th>
          Plan
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @plan_comments.each do |plan_comment| %>
      <tr>
        <td>
          <%= plan_comment.id %>
        </td>

        <td>
          <%= plan_comment.comment %>
        </td>

        <td>
          <% if plan_comment.author.present? %>
            <a href="/users/<%= plan_comment.author.id %>">
              <%= plan_comment.author.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if plan_comment.plan.present? %>
            <a href="/plans/<%= plan_comment.plan.id %>">
              <%= plan_comment.plan.description %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(plan_comment.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(plan_comment.updated_at) %> ago
        </td>

        <td>
          <a href="/plan_comments/<%= plan_comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @plan_comments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
