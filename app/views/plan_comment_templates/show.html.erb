<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Plan comment #<%= @plan_comment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/plan_comments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/plan_comments/<%= @plan_comment.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit plan comment
        </a>
      </div>

      <div class="col">
        <a href="/delete_plan_comment/<%= @plan_comment.id %>" class="btn btn-block btn-outline-secondary">
          Delete plan comment
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Comment
      </dt>
      <dd>
        <%= @plan_comment.comment %>
      </dd>

      <dt>
        Author
      </dt>
      <dd>
        <% if @plan_comment.author.present? %>
          <a href="/users/<%= @plan_comment.author_id %>">
            <%= @plan_comment.author.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Plan
      </dt>
      <dd>
        <% if @plan_comment.plan.present? %>
          <a href="/plans/<%= @plan_comment.plan_id %>">
            <%= @plan_comment.plan.description %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@plan_comment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@plan_comment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

