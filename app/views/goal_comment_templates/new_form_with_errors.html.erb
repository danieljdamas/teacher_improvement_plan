<% if @goal_comment.present? %>
  <% if @goal_comment.errors.any? %>
    <% @goal_comment.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new goal comment
</h1>


<hr>

<form action="/create_goal_comment" method="post">

  <div class="form-group">
    <label for="comment">
      Comment
    </label>

    <textarea id="comment" name="comment" class="form-control" rows="3"><%= @goal_comment.comment %></textarea>
  </div>

  <div class="form-group">
    <label for="author_id">
      Author
    </label>

    <%= select_tag(:author_id, options_from_collection_for_select(User.all, :id, :email, @goal_comment.author_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="goal_id">
      Goal
    </label>

    <%= select_tag(:goal_id, options_from_collection_for_select(Goal.all, :id, :description, @goal_comment.goal_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create goal comment
  </button>
</form>

<hr>

<a href="/goal_comments">
  Go back
</a>
