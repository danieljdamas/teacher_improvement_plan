<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All goal comments
    </h1>

    <a href="/goal_comments/new" class="btn btn-block btn-outline-secondary">
      Add a new goal comment
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Comment
        </th>

        <th>
          Author
        </th>

        <th>
          Goal
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @goal_comments.each do |goal_comment| %>
      <tr>
        <!-- Display goal_comment.id start -->
        <td>
          <%= goal_comment.id %>
        </td>
        <!-- Display goal_comment.id end -->

        <!-- Display goal_comment.comment start -->
        <td>
          <%= goal_comment.comment %>
        </td>
        <!-- Display goal_comment.comment end -->

        <!-- Display goal_comment.author_id start -->
        <td>
          <%= goal_comment.author.email %>
        </td>
        <!-- Display goal_comment.author_id end -->

        <!-- Display goal_comment.goal_id start -->
        <td>
          <%= goal_comment.goal.description %>
        </td>
        <!-- Display goal_comment.goal_id end -->

        <!-- Display goal_comment.created_at start -->
        <td>
          <%= time_ago_in_words(goal_comment.created_at) %> ago
        </td>
        <!-- Display goal_comment.created_at end -->

        <!-- Display goal_comment.updated_at start -->
        <td>
          <%= time_ago_in_words(goal_comment.updated_at) %> ago
        </td>
        <!-- Display goal_comment.updated_at end -->

        <td>
          <a href="/goal_comments/<%= goal_comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @goal_comments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
