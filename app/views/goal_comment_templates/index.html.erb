<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All goal comments
    </h1>

    <a href="/goal_comments/new" class="btn btn-block btn-outline-secondary">
      Add a new goal comment
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "goal_comment_templates/goal_comments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Comment
        </th>

        <th>
          Author
        </th>

        <th>
          Goal
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @goal_comments.each do |goal_comment| %>
      <tr>
        <td>
          <%= goal_comment.id %>
        </td>

        <td>
          <%= goal_comment.comment %>
        </td>

        <td>
          <% if goal_comment.author.present? %>
            <a href="/users/<%= goal_comment.author.id %>">
              <%= goal_comment.author.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if goal_comment.goal.present? %>
            <a href="/goals/<%= goal_comment.goal.id %>">
              <%= goal_comment.goal.description %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(goal_comment.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(goal_comment.updated_at) %> ago
        </td>

        <td>
          <a href="/goal_comments/<%= goal_comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @goal_comments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
